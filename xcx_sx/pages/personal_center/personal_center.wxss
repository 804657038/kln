 @import "../../utils/font.wxss";
 page{
   background-color:#fafafa;
 }
.personal_bg{
  background: url('http://i1.bvimg.com/650276/94ca9be94d175798.png')no-repeat;
  background-size: 100%;
  height: 350rpx;
  display: flex;
  -webkit-display: flex;
  justify-content: center;
  -webkit-justify-content: center;
  align-items: center;
  -webkit-align-items: center;
}
.personal_pic{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.personal_name{
  height: 60rpx;
  display: flex;
  -webkit-display: flex;
  align-items: center;
  justify-content: center;
  -webkit-justify-content: center;
  -webkit-align-items: center;
}
.personal_name_left{
  font-size: 40rpx;
  color: #333333;
  text-align: center;
}
.icon-xie_x{
  color: #fff;
  margin-left: 10rpx;
  margin-top: 10rpx;
  font-size: 26rpx;
}
.personality{
  font-size: 24rpx;
  color: #333333;
}
/*我的订单  */
.order-list{
  width: 96%;
  margin: -40rpx auto 40rpx;
  padding: 40rpx 0;
  display: flex;
  -webkit-display: flex;
  align-items: center;
  justify-content: center;
  -webkit-justify-content: center;
  -webkit-align-items: center;
  background-color: #fff;
  border-radius: 5rpx;
  -moz-box-shadow:0px 2px 5px #e5e5e5; -webkit-box-shadow:0px 2px 5px #e5e5e5; box-shadow:0px 2px 5px #e5e5e5;
}
.order-item{
  width: 50%;
}
.order-img{
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto 25rpx;
  display: block;
}
.bb_name{
  text-align: center;
  font-size: 24rpx;
  color: #333;
  white-space:nowrap;  
}
.exhibition-wrap{
  display: flex;
  -webkit-display: flex;
  align-items: center;
  justify-content:space-between;
  -webkit-justify-content: space-between;
  -webkit-align-items: center;
  padding:50rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.exhibition-left{
  font-size: 28rpx;
  color: #333333;
}
.icon-you-x{
  color: #c9ab79;
}