@import "../../utils/font.wxss";

/*搜索  */
.page-section{
  position: absolute;
  top:30rpx;
  padding: 30rpx;
  width: 100%;
  box-sizing:border-box;
  z-index: 10000;
}
.weui-input{
 height: 80rpx;
 background-color: #fff;
 padding-left: 90rpx;
 font-size: 26rpx;
 color: #888888;
 opacity: 0.7;
 border-radius: 5px;
 
}
.weui-cell_input-x{
  position: relative;
}
.icon-sousuo-x{
  position: absolute;
  left: 40rpx;
  display: flex;
  align-items: center;
  height: 100%;
  color: #e7e8ea;
}
/*banner  */
.page-section-spacing{
  width: 100%;
  z-index: -1;
  height: 750rpx;
}
swiper{
  height: 750rpx;
}
.banner-img{
  width: 100%;
  height: 750rpx;
}
/*--背包list  */
.select-list{
  display: flex;
  -webkit-display: flex;
  justify-content:center;
   -webkit-justify-content:center;
   padding-top: 60rpx;
}
.select-item{
  margin: 0 45rpx;
}
.inner-up{
  display: flex;
  -webkit-display: flex;
  justify-content: center;
  -webkit-justify-content: center;
  padding-bottom: 30rpx;
}
.inner-up-img{
  width: 80rpx;
  height: 80rpx;
}
.inner-down{
  display: flex;
  -webkit-display: flex;
  justify-content: center;
  -webkit-justify-content: center;
  font-size: 24rpx;
  color: #333333;
}
/*轮播1  */
.broadcast-swiper{
  height: 350rpx;
  box-sizing: border-box;
}
.broadcast-mid{
  padding-top: 110rpx;
}
.broadcast-header{
  text-align: center;
  font-size: 36rpx;
  color: #333;
  padding-bottom: 40rpx;
}
.broadcast-swiper-item{
   display: flex;
  -webkit-display: flex;
  justify-content: center;
  -webkit-justify-content: center;
}
.knapsack-wrap{
  margin: 0 25rpx;
}
.knapsack-up{
  display: flex;
  -webkit-display: flex;
  justify-content: center;
  -webkit-justify-content: center;
  margin-bottom: 30rpx;
}
.knapsack-up-img{
  width: 160rpx;
  height: 200rpx;
}
.knapsack-mid{
  font-size: 24rpx;
  color: #333;
  text-align: center;
}
.knapsack-down{
  font-size: 24rpx;
  color: #999;
  text-align: center;
}
/*轮播2  */
.broadcast-swiper2{
  margin-left: -10rpx;
}
.broadcast2-swiper{
 margin-left: 10rpx;
}
.banner-img-two{
  height: 260rpx;
}
/*专题活动  */

.special-header{
  display: flex;
  -webkit-display: flex; 
  justify-content: center;
  -webkit-justify-content: center;
  padding-top: 80rpx;
  padding-bottom: 40rpx;
}
.special-inner{
  width: 100%;
}
.special-inner-img{
  height: 310rpx;
  width: 100%;
}
/*更多  */
.more-header{
  text-align: center;
  padding: 90rpx 0 0 0;
}
.more-list{
  display: flex;
  -webkit-display: flex; 
  flex-wrap:wrap;
  -webkit-flex-wrap:wrap;
}
.more-item{
  width: 50%;
  margin: 80rpx 0;
}
.more-up{
  display: flex;
  -webkit-display: flex; 
  justify-content: center;
  -webkit-justify-content: center;
  padding-bottom:70rpx;
}
.more-up-img{
  width: 290rpx;
  height: 200rpx;
}
.more-mid{
  text-align: center;
  font-size: 28rpx;
  color: #333333;
}
.more-down{
  text-align: center;
  font-size: 28rpx;
  color: #999999;
}