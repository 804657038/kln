/*--品牌限量  */
.brand-wrap{
  padding: 50rpx 0 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  box-sizing: border-box;
  -webkit-display: flex;
  -webkit-justify-content: space-between;
    -webkit-align-items: flex-start;
}
.brand-left{
  font-size: 40rpx;
  width: 70%;
}
.brand-right{
  width: 20%;
  display: flex;
  align-items: center;
  -webkit-display: flex;
  -webkit-align-items: center;
  padding: 20rpx;
  background-color: #c9ab79;
  border-radius: 5rpx;
}
.logo-brand{
  width: 30rpx;
  height: 20rpx;
}
.country{
  font-size: 28rpx;
  color: #fff;
  margin-left: 10rpx;
}


