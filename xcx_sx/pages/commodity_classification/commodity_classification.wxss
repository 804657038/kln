@import "../../utils/font.wxss";
.section{
  padding: 0 30rpx;
  position: relative;
}
.icon-sousuo-x{
  position: absolute;
  left: 60rpx;
  display: flex;
  align-items: center;
  height: 100%;
  color: #c9c9c9;
}
.section-input{
  height: 80rpx;
  border:1px solid #c3c3c3;
  padding-left: 80rpx;
  border-radius: 5px;
  font-size:26rpx;
}
.placeholder_s{
   color: #bbbbbb;
}
/**index.wxss**/
.swiper-tab{
	width: 100%;
	text-align: center;
	line-height: 80rpx;
  display: flex;
  -webkit-display: flexswiper-box;
  }
.swiper-tab-list{  
  font-size: 28rpx;
	width: 50%;
	color: #333333;
  position: relative;
  z-index: 10000000000000;
}
.on{ 
  color: #c9ab79;
}
.colors{
  color: #c9ab79 !important;
}
 /*select-wrap  */
.iconfont-up{
  position:absolute;
  right: 35rpx;
  top:-5rpx;
  color: #333;
  z-index: -1;
}
.iconfont-down{
  position:absolute;
  right: 35rpx;
  color: #333;
  bottom:-5rpx;
  z-index: -1;
}
.swiper-box{
  width: 100%; 
  overflow:auto !important; 
  background-color: #fafafa;
}
swiper-item{
  overflow: auto;
}

/*其他  */
.more-header{
  text-align: center;
  padding: 90rpx 0 0 0;
}
.more-list{
  display: flex;
  -webkit-display: flex; 
  flex-wrap:wrap;
  -webkit-flex-wrap:wrap;
  padding: 2%;
  box-sizing: border-box;
}
.more-item{
  width: 49%;
  padding: 80rpx 0 40rpx;
  margin: 0.5% 0.5%;
  background-color: #fff;
}
.more-up{
  display: flex;
  -webkit-display: flex; 
  justify-content: center;
  -webkit-justify-content: center;
  padding-bottom:70rpx;
}
.more-up-img{
  width: 290rpx;
  height: 200rpx;
}
.more-mid{
  text-align: center;
  font-size: 28rpx;
  color: #333333;
}
.more-down{
  text-align: center;
  font-size: 28rpx;
  color: #999999;
}
