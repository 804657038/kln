@import "../../utils/font.wxss";

.section_s{
  padding: 0 30rpx;
  margin-bottom: 10rpx;

  
}
.input_s{
  width: 100%;
  height: 100rpx;
  border:1px solid #ddd;
  padding-left: 40rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #bbbbbb;
  display: flex;
  -webkit-display: flex;
  align-items: center;
  -webkit-align-items: center;
  position: relative;
}
.textarea_s{
  width: 100%;
  height: 200rpx;
  border:1px solid #ddd;
  padding-left: 40rpx;
  padding-top: 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #bbbbbb;
}
.icon-shang-x{
  position: absolute;
  right: 40rpx;
  transform:rotate(180deg);
  color: #c9ab79;
}
.placeholder_s{
  color: #bbbbbb;
}
.checkbox-wrap{
  display: flex;
  align-items: center;
  -webkit-display: flex;
  -webkit-align-items: center;
  margin-top: 20rpx;
}
.checkbox {
  width: 48rpx;
  height: 48rpx;
  margin-left: 30rpx;

}
.adds_s{
  font-size: 26rpx;
  color: #888888;
  margin-left: 10rpx;
}
/*确定  */
.btn{
  display: flex;
  -webkit-display: flex;
  justify-content: center;
  -webkit-justify-content: center;
  position: absolute;
  bottom:-1rpx;
  width: 100%;
  border:1px solid #f6f6f6;
}
.btn-box{
  width: 50%;
  height: 110rpx;
  display: flex;
  -webkit-display: flex;
  justify-content: center;
  -webkit-justify-content: center;
  align-items: center;
  -webkit-align-items: center;
  font-size: 32rpx;
  color: #c9ab79;
}
.btn-box-current{
  background-color:#c9ab79;
  color: #fff;
}