@import "../../utils/font.wxss";

page{
  background:url('http://i1.bvimg.com/650276/cd7b51ad742827e6.png') no-repeat;
  background-size: 100%;
}
.mian-wrap{
  position: fixed;
  bottom:0;
}
.main{
  padding: 40rpx;
  background-color: #fff;
  box-sizing: border-box;

}
.header-wrap{
  display:flex;
}
.shop_img{
   width: 160rpx;
   height: 160rpx;
}
.shop-mid{
  height: 160rpx;
  display: flex;
   display: -webkit-flex;
  flex-flow: row wrap;
  -webkit-flex-flow: row wrap;
  align-content:space-around;
  -webkit-align-content: space-around;
  padding-left: 40rpx;
}
.shop-mid-p{
  width: 100%;
  font-size:  34rpx;
  color: #333;
}
.icon-cuo1-x{
  font-size: 50rpx;
  color: #adadad;
}
.color_title{
  margin-top: 50rpx;
  font-size: 28rpx;
}
.radio-group{
  padding: 30rpx 0;
}
/*尺寸  */
.size_title{
  margin-top:10rpx;
  font-size: 28rpx;
}
.size-list{
  display: flex;
  -webkit-display: flex; 
  padding: 30rpx 0;
}
.size-item{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  border:1px solid #ddd;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  -webkit-display: flex;
  -webkit-align-items: center;
  -webkit-justify-content: center;
  font-size: 26rpx;
}
/*属性  */
.bg_colors{
  background-color: #c9ab79;
  color: #fff;
 -moz-box-shadow:-1px 3px 5px #e5e5e5; -webkit-box-shadow:-1px 3px 5px #e5e5e5; box-shadow:-1px 3px 5px #e5e5e5;
}
.attribute_title{
  font-size: 28rpx;
}
.attribute-list{
  display: flex;
  align-items: center;
  -webkit-display: flex;
  -webkit-align-items: center;
  padding: 30rpx 0;
}
.attribute-item{
  padding: 20rpx 30rpx;
  border:1px solid #ddd;
  border-radius: 5px;
  margin-right: 20rpx;
  font-size: 26rpx;
}
.nums-list{
  display: flex;
  align-items: center;
  justify-content: space-between;
  -webkit-display: flex;
  -webkit-align-items: center;
