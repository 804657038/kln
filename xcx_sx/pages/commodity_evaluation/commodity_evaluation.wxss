@import "../../utils/font.wxss";

.evaluate{
  display: flex;
  -webkit-display: flex;
  flex-wrap: wrap;
  padding: 30rpx;
}
.evaluate-item{
  width: 30%;
  border:1px solid #eee;
  font-size: 26rpx;
  color: #333;
  margin-right: 3%;
  margin-bottom: 20rpx;
  border-radius: 3px;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
   display: flex;
  -webkit-display: flex;
  justify-content: center;
  -webkit-justify-content: center;
  align-items: center;
  -webkit-align-items: center;
   white-space:nowrap;
}
.clan{
  background-color:#c9ab79;
  color: #fff;
}
.user-wrap{
  padding: 0 30rpx;
}
.user-inner:last-child{
    border:none;
}
.user-inner{
  padding:40rpx 0;
  border-bottom: 1px solid #eee;
}
.user-inner-up{
  display: flex;
  align-items: center;
  justify-content:space-between;
  -webkit-display: flex;
  -webkit-align-items: center;
  -webkit-justify-content: space-between;
}
.user-inner-portrait{
  display: flex;
  align-items: center;
  -webkit-display: flex;
  -webkit-align-items: center;
}
.user-inner-pic{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.user-inner-name{
  font-size:28rpx;
  color: #333;
  margin-left: 20rpx;
}
.user-inner-time{
  font-size: 28rpx;
  color: #999999;
}
.user-inner-down{
  font-size: 28rpx;
  color: #888;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.user-pic{
  display: flex;
  align-items: center;
  -webkit-display: flex;
  -webkit-align-items: center;
  flex-wrap:wrap;
   -webkit-flex-wrap:wrap;
}
.user-pic-img{
  width: 30.3333333333333%;
  height: 220rpx;
  margin: 10rpx 1.5%;
}